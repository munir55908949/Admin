@model Core.Admin.Models.AdministrationModel
@using Kendo.Mvc.UI;

@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;
    ViewBag.Title = "أضافة / تعديل";
}
@*<script src="~/Scripts/select2.js"></script>
    <script src="~/Scripts/select2.min.js"></script>*@
@*<script src="jquery.min.js"></script>*@
<script src="http://maps.google.com/maps/api/js?key=AIzaSyBOGr0zhheEibq9Gcn55DaVatSpbQP-3GE"></script>
@*<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>*@
<script type="text/javascript" src="@Href("~/ViewsScripts/Administration/AddEdit.js")"></script>

<!-- GOOGLE MAPS -->

<div class="row">
    <div class="col-sm-12">
        <div class="tabbable">
            <ul id="myTab" class="nav nav-tabs tab-bricky">
                <li class="active">
                    <div class="x_titlee">
                        <h2>
                            البيانات الأساسية
                        </h2>

                        <div class="clearfix"></div>
                    </div>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane in active" id="GeneralInfo">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            @using (Html.BeginForm("AddEdit", "Administration", FormMethod.Post, new { @Id = "frmAddEdit", @role = "form", onsubmit = "ShowLoading();" }))
                            {
                                @Html.ValidationSummary()
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(m => Model.Id)
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label class="control-label">
                                                    إسم الإدارة<span class="symbol required"></span>
                                                </label>
                                                @(Html.Kendo().TextBoxFor(p => p.Name))
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label class="control-label">
                                                    القطاع <span class="symbol required"></span>
                                                </label>
                                                @(Html.Kendo().DropDownListFor(m => m.SectorId)
                                                .Filter("contains")
                                                .HtmlAttributes(new { @style = "width:100%" })
                                                .BindTo((Model.SectorList)
                                                ))
                                                @Html.ValidationMessageFor(m => m.SectorId)
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label class="control-label">
                                                    ملاحظــات <span class="symbol required"></span>
                                                </label>
                                                @(Html.Kendo().TextBoxFor(p => p.Note))
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <div class="row" style="margin-top: 5px; margin-right:3px;">
                                                        <button class="btn btn-yellow btn-block" type="submit" style="font-size:x-large">
                                                            حفـــــظ  <i class="fa fa-arrow-circle-o-down" style="font-size:x-large"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                              }
                          </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<link href='http://fonts.googleapis.com/css?family=Bitter' rel='stylesheet' type='text/css'>
<style type="text/css">
    .tabbable {
        width: 1290px;
        height: 650px !important;
        margin: 10px auto;
        background: rgb(2,0,36);
        background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(9,103,121,1) 1%, rgba(183,240,251,1) 100%);
        border-radius: 10px;
        -webkit-border-radius: 10px;
        -moz-border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.13);
        -moz-box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.13);
        -webkit-box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.13);
    }
        .tabbable .inner-wrap {
            padding: 5px;
            margin: 10px 10px 10px 10px;
            background: #F8F8F8;
            border-radius: 6px;
            margin-bottom: 15px;
        }
        .tabbable h2 {
            background: #2A88AD;
            padding: 10px 10px 10px 10px;
            margin: 10px 10px 10px 10px;
