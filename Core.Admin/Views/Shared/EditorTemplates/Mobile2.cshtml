@model object
@Html.TextBoxFor(f => f,new { onkeypress = "return isNumber(event)", @placeholder = "رقم الجوال", @class = "form-control", @maxlength = "10", size = "10" } )

<script>
     function isNumber(evt) {
            evt = (evt) ? evt : window.event;
            var charCode = (evt.which) ? evt.which : evt.keyCode;

            if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                return false;
            }
            return true;
        }
</script>