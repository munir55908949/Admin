@model Core.Admin.Models.GuaranteeSortModel
@using Kendo.Mvc.UI;

@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;
    ViewBag.Title = "أضافة / تعديل";
}

<script type="text/javascript" src="@Href("~/ViewsScripts/GuaranteeSort/AddEdit.js")"></script>
<!-- GOOGLE MAPS -->
<script src="http://maps.google.com/maps/api/js?key=AIzaSyBOGr0zhheEibq9Gcn55DaVatSpbQP-3GE"></script>
<div class="row">
    <div class="col-sm-12">
        <div class="tabbable">
            <ul id="myTab" class="nav nav-tabs tab-bricky">
                <li class="active">
                    <div class="x_titlee">
                        <h2>
                            البيانــات الأساسيــة
                        </h2>

                        <div class="clearfix"></div>
                    </div>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane in active" id="GeneralInfo">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            @using (Html.BeginForm("AddEdit", "GuaranteeSort", FormMethod.Post, new { @Id = "frmAddEdit", @role = "form", onsubmit = "ShowLoading();" }))
                            {
                                @Html.ValidationSummary()
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(m => Model.Id)
                                <div class="row">
                                    <div class="col-md-offset-12">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-7">
                                        <div class="form-group">
                                            <label class="control-label">
                                                اســم تصنيف الكفالة<span class="symbol required"></span>
                                            </label>
                                            @(Html.Kendo().TextBoxFor(p => p.Name))
                                        </div>
                                    </div>
                                    <div class="col-md-7">
                                        <div class="form-group">
                                            <label class="control-label">
                                                ملاحظات<span class="symbol required"></span>
                                            </label>
                                            @(Html.Kendo().TextBoxFor(p => p.Note))
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="control-label">
                                                التاريــخ<span class="symbol required"></span>
                                            </label>
                                            @(Html.Kendo().DateTimePickerFor(m =>m.CreatedAt).Format("yyyy/MM/dd"))
                                        </div>
                                    </div>
                                </div>

                                <br />
                                <div class="row" style="margin-top: 5px;">
                                    <div class="col-md-4">
                                    </div>
                                    <div class="col-md-6">
                                        <button class="btn btn-yellow btn-block" type="submit" style="font-size:x-large">
                                            حفــــظ <i class="fa fa-arrow-circle-o-down" style="font-size:x-large"></i>
                                        </button>
                                    </div>
                                    @*<div class="col-md-2">
                                        <a class="btn btn-yellow btn-block" href="@Url.Action("Index","GuaranteeSort")">
                                            رجوع <i class="fa fa-arrow-circle-right"></i>
                                        </a>
                                    </div>*@
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<link href='http://fonts.googleapis.com/css?family=Bitter' rel='stylesheet' type='text/css'>
<style type="text/css">
    .tabbable {
        width: 730px;
        height: 480px;
        padding: 10px;
        margin: 10px auto;
        background: rgb(2,0,36);
        background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(9,103,121,1) 1%, rgba(183,240,251,1) 100%);
        border-radius: 10px;
        -webkit-border-radius: 10px;
        -moz-border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.13);
        -moz-box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.13);
        -webkit-box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.13);
    }

        .tabbable .inner-wrap {
            padding: 5px;
            margin: 10px 10px 10px 10px;
            background: #F8F8F8;
            border-radius: 6px;
            margin-bottom: 15px;
        }

        .tabbable h2 {
            background: #2A88AD;
            padding: 10px 10px 10px 10px;
            margin: 10px 10px 10px 10px;
            border-radius: 10px 10px 0 0;
            -webkit-border-radius: 10px 10px 0 0;
            -moz-border-radius: 10px 10px 0 0;
            color: #fff;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.12);
            font: normal 30px 'Bitter', serif;
            -moz-box-shadow: inset 0px 2px 2px 0px rgba(255, 255, 255, 0.17);
            -webkit-box-shadow: inset 0px 2px 2px 0px rgba(255, 255, 255, 0.17);
            box-shadow: inset 0px 2px 2px 0px rgba(255, 255, 255, 0.17);
            border: 1px solid #257C9E;
        }

    .control-label {
        font: normal 30px 'Bitter', serif !important;
    }

    .k-textbox {
        font: normal 20px 'Bitter', serif !important;
        background: rgb(2,0,36);
        background: radial-gradient(circle, rgba(2,0,36,1) 0%, rgba(9,121,120,1) 0%, rgba(237,249,250,1) 0%) !important;
    }

    .k-input {
        font: normal 20px 'Bitter', serif !important;
    }

    .main-navigation navbar-collapse collapse {
        width: auto !important;
    }
</style>
@Scripts.Render("~/bundles/jqueryval")
